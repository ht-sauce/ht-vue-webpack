{
  "name": "ht-vue-webpack",
  "private": true,
  "description": "个人webpack构建基础搭建，用以替代被官方抛弃的vuecli",
  "workspaces": [
    "play",
    "plugin",
    "play-vue2"
  ],
  "scripts": {
    "play:dev": "npm run dev -w play",
    "play:build": "npm run build -w play",
    "play:preview": "npm run preview -w play",
    "play-vue2:dev": "npm run dev -w play-vue2",
    "play-vue2:build": "npm run build -w play-vue2",
    "play-vue2:preview": "npm run preview -w play-vue2"
  },
  "author": "ht-sauce",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.0.1",
    "typescript": "^5.1.6",
    "vue-loader": "^17.2.2"
  }
}
